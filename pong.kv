#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
<Bar>:
    canvas:

        Color:
            rgb: (self.r,self.g,self.b)
        Rectangle:
            pos:self.pos
            size:self.size
<RevLimit>:
    size: 10, 200
    canvas:
        Color:
            rgb: (0.5,0.5,0.5)
        Rectangle:
            pos:self.pos
            size:self.size

<BestGear>:
    Label:
        font_size: self.parent.height / 10
        center_x: root.width  / 2
        top: (self.parent.height / 10)*10
        text: "v0.0.2"
<FuelDTE>:
    Label:
        font_size: self.parent.height / 10
        center_x: root.width  / 2
        top: (self.parent.height / 10)*10
<Boost>:
    Label:
        font_size: self.parent.parent.height / 7
        center_x: self.parent.parent.width  / 3
        top: (self.parent.parent.height / 10)*5
        text: str(self.parent.boost)


<BoostGauge>:
    canvas:
        PushMatrix:
        Rotate:
            angle: root.angle
            origin: (root.parent.width/2,root.parent.height / 5)
        Color:
            rgb: (1.0,0.8,0)
        Rectangle:
            pos: (root.parent.width,root.parent.height / 5)
            size: (root.parent.height / 5, root.parent.height / 60)
        PopMatrix:


<PongGame>:
    rpmobject: rpm
    gearobject: bestg
    fuelDTEobject: fuelobj
    boostObject: boostobj
    boostGaugeObject: boostGaugeobj
    revlimitObject: revlimitobj

    Label:
        font_size: (self.parent.height / 10)
        center_x: root.width  / 2
        top: root.top - 0
        text: str(root.text1)
    Label:
        font_size: self.parent.height / 20
        center_x: (self.parent.width  / 20)*1
        top: (self.parent.height / 10)*10
        text: str(root.tire_temp_fl)
    Label:
        font_size: self.parent.height / 20
        center_x: (self.parent.width  / 20)*2
        top: (self.parent.height / 10)*10
        text: str(root.tire_temp_fr)
    Label:
        font_size: self.parent.height / 20
        center_x: (self.parent.width  / 20)*1
        top: (self.parent.height / 10)*9
        text: str(root.tire_temp_rl)
    Label:
        font_size: self.parent.height / 20
        center_x: (self.parent.width  / 20)*2
        top: (self.parent.height / 10)*9
        text: str(root.tire_temp_rr)

    Label:
        font_size: self.parent.height / 20
        halign:'left'
        x: (self.parent.width  / 20)*1
        top: (self.parent.height / 10)*8
        text: "Fuel "+str(root.fuel)+"%"
    Label:
        font_size: self.parent.height / 20
        halign:'left'
        x: (self.parent.width  / 20)*1.5
        top: (self.parent.height / 10)*7
        text: "DTE "+str(  root.fuel_DTE  )+" Laps"
    Label:
        font_size: self.parent.height / 5
        center_x: root.width  / 2
        top: (self.parent.height / 10)*3
        text: "" +str(root.delta) + "s"
        markup: True

    Label:
        font_size: self.parent.height / 5
        center_x: root.width  / 2
        top: (self.parent.height / 10)*8
        text: str(root.bestgear)
    Label:
        font_size: self.parent.height / 30
        center_x: (self.parent.width  / 20)*16
        middle: (self.parent.height / 10)*1
        text: str(root.ip)
    Label:
        font_size: self.parent.height / 20
        center_x: (self.parent.width  / 20)*17
        top: (self.parent.height / 20)*19
        text: str(root.bestLap)
    Label:
        font_size: self.parent.height / 20
        center_x: (self.parent.width  / 20)*17
        top: (self.parent.height / 20)*18
        text: str(root.lastLap)
    Bar:
        id: rpm
        center_y: root.center_y
    RevLimit:
        id: revlimitobj
        center_y: root.center_y
    BestGear:
        id: bestg
        text: str(self.gear)
    FuelDTE:
        id: fuelobj
        text: "DTE "+str(  root.fuel_DTE  )+" Laps test"
    Boost:
        id: boostobj
    BoostGauge:
        id: boostGaugeobj
